{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/tests/**/*.test.ts"],  // Test dosyalarını da dahil ediyoruz
  "exclude": ["node_modules"]
}
